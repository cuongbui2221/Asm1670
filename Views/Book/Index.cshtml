@model ICollection<Asm2.Models.Book>

<div class="container col-md-8 text-center mt-3">
    <h1 class="text text-primary">Book List</h1>

    <table class="table table-bordered mt-4">
        <thead>
            <tr>
                <th>
                    Book Id
                </th>
                 <th>
                    Customer Id
                </th>
                 <th>
                    Author Id
                </th>
                <th>
                    Title
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
           {
               <tr>
                   <td>
                       @Html.DisplayFor(item => book.BookId)
                   </td>
                    <td>
                       @Html.DisplayFor(item => book.AuthorId)
                   </td>
                   <td>
                       @Html.DisplayFor(item => book.CustomerId)
                   </td>
                   <td>@Html.DisplayFor(item => book.Title)</td>
                   <td>
                           <a asp-controller="Book" asp-action="Detail" asp-route-id="@book.BookId">
                               
                           </a>
                           <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.BookId">
                                
                           </a>
                           <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.BookId"
                           onclick="return confirm('Are you sure to delete this book ?')"
                           >
                                
                           </a>
                   </td>
               </tr>
           }
        </tbody>
    </table>
</div>