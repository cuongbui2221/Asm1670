@model ICollection<Asm2.Models.Author>

<div class="container col-md-8 text-center mt-3">
    <h1 class="text text-danger">Author List</h1>
    <a class="btn btn-primary" asp-action="Create">Create</a>
    <table class="table table-primary mt-3">
        <tr>
            <th>Author Id</th>
            <th> Name</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
           <tr>
               <td>@item.AuthorId</td>
               <td>@item.Name</td>
               <td>@item.Age</td>
               <td>
                   <a class="btn btn-info" asp-action="Detail" asp-route-id="@item.AuthorId">Detail</a>
                   <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.AuthorId">Edit</a>
                   <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AuthorId"
                   onclick="return confirm('Are you sure you want to delete this author ?');">
                   Delete</a>
               </td>
           </tr>
        }
    </table>
    
</div>